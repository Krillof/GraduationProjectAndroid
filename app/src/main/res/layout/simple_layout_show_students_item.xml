<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="127dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/teacher_item"
    android:layout_marginTop="8dp"
    >

    <ImageView

        android:id="@+id/picture"

        android:layout_width="110dp"
        android:layout_height="110dp"

        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/header"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="178dp"

        android:layout_marginTop="12dp"
        android:layout_marginStart="130dp"

        style="@style/header_text"
        android:maxLines="2"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <View
        android:id="@+id/button_background_assignments"

        android:layout_width="152dp"
        android:layout_height="25dp"

        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/adapter_item_button"

        />

    <TextView
        android:id="@+id/button_text_assignments"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@+id/button_background_assignments"
        app:layout_constraintBottom_toBottomOf="@+id/button_background_assignments"
        app:layout_constraintStart_toStartOf="@+id/button_background_assignments"
        app:layout_constraintEnd_toEndOf="@+id/button_background_assignments"

        android:text="@string/assignments"
        style="@style/simple_white_text"


        />



    <View
        android:id="@+id/button_background_abandon"

        android:layout_width="152dp"
        android:layout_height="25dp"

        app:layout_constraintTop_toBottomOf="@id/button_background_assignments"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="130dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/adapter_item_button"

        />

    <TextView
        android:id="@+id/button_text_abandon"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@+id/button_background_abandon"
        app:layout_constraintBottom_toBottomOf="@+id/button_background_abandon"
        app:layout_constraintStart_toStartOf="@+id/button_background_abandon"
        app:layout_constraintEnd_toEndOf="@+id/button_background_abandon"

        android:text="@string/abandon"
        style="@style/simple_white_text"

        />





</androidx.constraintlayout.widget.ConstraintLayout>