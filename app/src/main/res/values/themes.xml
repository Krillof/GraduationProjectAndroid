<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GraduationProjectAndroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <inventoryItem name="android:forceDarkAllowed" tools:targetApi="q">false</inventoryItem>

        <inventoryItem name="windowActionBar">false</inventoryItem>
        <inventoryItem name="windowNoTitle">true</inventoryItem>
        <inventoryItem name="android:windowFullscreen">true</inventoryItem>

        <inventoryItem name="colorPrimary">@color/purple_500</inventoryItem>
        <inventoryItem name="colorPrimaryVariant">@color/purple_700</inventoryItem>
        <inventoryItem name="colorOnPrimary">@color/white</inventoryItem>

        <inventoryItem name="colorSecondary">@color/teal_200</inventoryItem>
        <inventoryItem name="colorSecondaryVariant">@color/teal_700</inventoryItem>
        <inventoryItem name="colorOnSecondary">@color/black</inventoryItem>
        <inventoryItem name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</inventoryItem>


    </style>

    <style name="transparent" parent="android:Theme">
        <inventoryItem name="android:windowIsTranslucent">true</inventoryItem>
        <inventoryItem name="android:windowBackground">@android:color/transparent</inventoryItem>
        <inventoryItem name="android:windowContentOverlay">@null</inventoryItem>
        <inventoryItem name="android:windowNoTitle">true</inventoryItem>
        <inventoryItem name="android:windowIsFloating">true</inventoryItem>
        <inventoryItem name="android:backgroundDimEnabled">false</inventoryItem>
    </style>


