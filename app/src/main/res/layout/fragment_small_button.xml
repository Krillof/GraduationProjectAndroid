<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    tools:context=".fragments.Button"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/left_cap"
        android:layout_width="9dp"
        android:layout_height="25dp"

        android:background="@drawable/small_button_cap_left"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <View
        app:layout_constraintStart_toEndOf="@id/left_cap"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="7dp"
        android:layout_height="25dp"
        android:background="@drawable/orange_rectangle"
        android:id="@+id/button_frame"
        />

    <TextView
        android:id="@+id/button_text"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:gravity="center_horizontal|top"

        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"

        android:textAppearance="@style/simple_white_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <View
        android:id="@+id/right_cap"
        android:layout_width="9dp"
        android:layout_height="25dp"

        android:background="@drawable/small_button_cap_right"

        app:layout_constraintStart_toEndOf="@+id/button_frame"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>