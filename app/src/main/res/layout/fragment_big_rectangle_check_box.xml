<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BigRectangleCheckBox">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/blue_rectangle"

            android:layout_width="96dp"
            android:layout_height="24dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            android:background="@drawable/blue_normal_rectangle_for_checkbox_off"
            />

        <TextView
            android:id="@+id/text"

            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginTop="5dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/blue_rectangle"
            app:layout_constraintEnd_toEndOf="@+id/blue_rectangle"

            style="@style/small_white_text"



            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>