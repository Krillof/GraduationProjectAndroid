<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.for_changing_avatar.AvatarPartsChoiceMenu">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"

        android:layout_height="38dp"

        android:background="@drawable/avatar_parts_background_choice"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/choice_1"

        android:layout_width="64dp"
        android:layout_height="38dp"

        android:background="@drawable/avatar_parts_first_choice"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/choice_text_1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"

        style="@style/text_style"

        android:text="@string/body"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <View
        android:id="@+id/choice_2"

        android:layout_width="82dp"
        android:layout_height="38dp"

        android:layout_marginStart="64dp"

        android:background="@drawable/avatar_parts_middle_choice"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <TextView
        android:id="@+id/choice_text_2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"

        style="@style/text_style"

        android:text="@string/hair"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <View
        android:id="@+id/choice_3"

        android:layout_width="match_parent"
        android:layout_height="38dp"

        android:layout_marginStart="146dp"

        android:background="@drawable/avatar_parts_first_choice"


        app:layout_constraintStart_toEndOf="@+id/choice_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choice_text_3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="162dp"
        android:layout_marginTop="10dp"

        style="@style/text_style"

        android:text="@string/background"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="38dp"

        android:background="@drawable/light_gray_rectangle"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/avatar_parts_list"

        android:layout_marginTop="38dp"

        android:layout_width="match_parent"
        android:layout_height="430dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>