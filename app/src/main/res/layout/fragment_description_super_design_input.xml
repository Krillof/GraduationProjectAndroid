<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DescriptionSuperDesignInput">

    <View
        android:id="@+id/white_rectangle"
        android:layout_width="328dp"
        android:layout_height="128dp"
        android:background="@drawable/big_white_rectangle"
        />

    <TextView
        android:id="@+id/hiding_text"

        style="@style/text_style"
        android:layout_width="307dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14.5dp"
         />

    <TextView
        android:id="@+id/small_header_text"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        style="@style/small_gray_header"
         />

    <EditText
        android:id="@+id/input_text"
        android:inputType="textMultiLine"
        android:background="@android:color/transparent"
        android:maxLines="3"

        android:visibility="gone"
        style="@style/text_style"
        android:layout_width="match_parent"
        android:layout_height="54dp"

        android:layout_marginTop="23dp"
        android:layout_marginStart="16dp"
        />

</FrameLayout>