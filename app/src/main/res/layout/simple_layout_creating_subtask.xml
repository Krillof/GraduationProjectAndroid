<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="24dp"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/creating_subtask_rect"
    android:id="@+id/rect"
    >

    <View
        android:id="@+id/plus_or_close"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:background="@drawable/creating_subtask_plus"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        />

    <View
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:id="@+id/plus_or_close_tap_area"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView

        android:id="@+id/input_hint"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="41dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/new_list_element"

        style="@style/small_input_hint"

        />

    <EditText
        android:id="@+id/input_text"

        android:visibility="gone"

        android:maxLength="30"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="41dp"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"

        style="@style/pre_small_text_style"

        />


</androidx.constraintlayout.widget.ConstraintLayout>