<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreatingAvatar">

    <View
        android:id="@+id/character_background"
        android:layout_width="270dp"
        android:layout_height="275dp"

        android:layout_marginTop="24dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/market_item_background"

        />

    <ImageView

        android:id="@+id/body_rectangle"

        android:layout_width="270dp"
        android:layout_height="275dp"

        app:layout_constraintTop_toTopOf="@+id/character_background"
        app:layout_constraintStart_toStartOf="@+id/character_background"

        />

    <ImageView

        android:id="@+id/hair_rectangle"

        android:layout_width="270dp"
        android:layout_height="275dp"

        app:layout_constraintTop_toTopOf="@+id/character_background"
        app:layout_constraintStart_toStartOf="@+id/character_background"

        />

    <ImageView

        android:id="@+id/background_rectangle"

        android:layout_width="270dp"
        android:layout_height="275dp"

        app:layout_constraintTop_toTopOf="@+id/character_background"
        app:layout_constraintStart_toStartOf="@+id/character_background"

        />

    <androidx.fragment.app.FragmentContainerView

        android:id="@+id/fragment"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="34dp"

        app:layout_constraintTop_toBottomOf="@+id/character_background"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/button_next"

        android:layout_marginTop="236dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />




</androidx.constraintlayout.widget.ConstraintLayout>